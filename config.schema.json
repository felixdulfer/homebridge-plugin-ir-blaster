{
  "pluginAlias": "IRBlasterHomebridgePlugin",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "blasters": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "required": true,
              "default": "",
              "placeholder": "Name your IR Blaster"
            },
            "address": {
              "title": "Address",
              "type": "string",
              "required": true,
              "default": "",
              "placeholder": "http://192.168.1.10"
            },
            "commands": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "title": "Name",
                    "type": "string",
                    "required": true,
                    "default": "",
                    "placeholder": "Name Command"
                  },
                  "data": {
                    "title": "Data",
                    "type": "string",
                    "required": true,
                    "default": "",
                    "placeholder": "1214, 414, 1204, 514, 406, 1290, ..."
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
